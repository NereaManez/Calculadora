<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculadora">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="bottom">

        <TextView
            android:id="@+id/resultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textAlignment="textEnd"
            android:layout_margin="32dp"
            android:theme="@style/calc_num"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/borrar_todo"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="C"
                    android:textSize="20sp"
                    android:tag="C"
                    android:theme="@style/calc_button"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    android:id="@+id/borrar_uno"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:contentDescription="borrar"
                    android:tag="del"
                    android:theme="@style/calc_button"
                    app:icon="@android:drawable/ic_input_delete"
                    app:iconGravity="textEnd" />

                <Button
                    android:id="@+id/porcentaje"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="%"
                    android:textSize="20sp"
                    android:tag="%"
                    android:theme="@style/calc_button"
                    android:background="?android:attr/selectableItemBackground"/>

                <Button
                    android:id="@+id/division"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="/"
                    android:textSize="20sp"
                    android:tag="/"
                    android:theme="@style/calc_button"
                    android:background="?android:attr/selectableItemBackground" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/bt7"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="7"
                    android:textSize="20sp"
                    android:tag="7"
                    android:theme="@style/calc_num"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    android:id="@+id/bt8"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="8"
                    android:textSize="20sp"
                    android:tag="8"
                    android:theme="@style/calc_num"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    android:id="@+id/bt9"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="9"
                    android:textSize="20sp"
                    android:tag="9"
                    android:theme="@style/calc_num"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    android:id="@+id/multiplicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="x"
                    android:textSize="20sp"
                    android:tag="x"
                    android:theme="@style/calc_button"
                    android:background="?android:attr/selectableItemBackground" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/bt4"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="4"
                    android:textSize="20sp"
                    android:tag="4"
                    android:theme="@style/calc_num"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    android:id="@+id/bt5"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="5"
                    android:textSize="20sp"
                    android:tag="5"
                    android:theme="@style/calc_num"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    android:id="@+id/bt6"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="6"
                    android:textSize="20sp"
                    android:tag="6"
                    android:theme="@style/calc_num"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    android:id="@+id/resta"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="-"
                    android:textSize="30sp"
                    android:tag="-"
                    android:theme="@style/calc_button"
                    android:background="?android:attr/selectableItemBackground" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/bt1"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="1"
                    android:textSize="20sp"
                    android:tag="1"
                    android:theme="@style/calc_num"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    android:id="@+id/bt2"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="2"
                    android:textSize="20sp"
                    android:tag="2"
                    android:theme="@style/calc_num"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    android:id="@+id/bt3"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="3"
                    android:textSize="20sp"
                    android:tag="3"
                    android:theme="@style/calc_num"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    android:id="@+id/suma"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="+"
                    android:textSize="25sp"
                    android:tag="+"
                    android:theme="@style/calc_button"
                    android:background="?android:attr/selectableItemBackground" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/borrar_historial"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="AC"
                    android:textSize="20sp"
                    android:tag="AC"
                    android:theme="@style/calc_button"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    android:id="@+id/bt0"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="0"
                    android:textSize="20sp"
                    android:tag="0"
                    android:theme="@style/calc_num"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    android:id="@+id/decimal"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text=","
                    android:textSize="30sp"
                    android:tag="."
                    android:theme="@style/calc_num"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    android:id="@+id/igual"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="="
                    android:textSize="20sp"
                    android:tag="igual"
                    android:theme="@style/calc_button_igual"
                    app:cornerRadius="10dp" />

            </TableRow>
        </TableLayout>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/op_des" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_suma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Suma" />
            <RadioButton
                android:id="@+id/rb_resta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Resta" />
            <RadioButton
                android:id="@+id/rb_mult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mult" />
            <RadioButton
                android:id="@+id/rb_div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Div" />
        </RadioGroup>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>